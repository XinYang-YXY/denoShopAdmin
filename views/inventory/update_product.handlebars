<div class="wrapper">
    {{>_sidemenu}}
    <div id="content">
        <h3 style="text-align: center;">Update Product</h3>
        <div class="card card-body">
            <form action="/inventory/updateproduct/{{inventory.id}}?_method=PUT" method="post">
                <input type="hidden" name="_method" value="PUT">
                <div class="row">
                    <div class="col-md-5 col-lg-5">
                        <div class="row">
                            <div style="position:relative">
                                <label class="edit-icon" for="prodUpload1"><i class="fas fa-edit fa-lg"></i></label>
                                <img src="{{imageUrl inventory.imageFile 0}}" alt=""
                                    onerror="this.onerror=null;this.src='/img/no-image.jpg';"
                                    class="img-thumbnail img-fluid" onmouseover="" onmouseout="" id="img1">
                            </div>
                            <input type="file" name="prodUpload1" id="prodUpload1" class="file_button"
                                accept="image/png,image/jpeg,image/jpg,image/gif" hidden>
                            <input id="prodURL1" type="hidden" name="prodURL1"
                                value="{{imageUrl inventory.imageFile 0}}">
                            {{!-- <input type="image" name="" id="img1" src="{{imageUrl inventory.imageFile 0}}"> --}}
                            <div style="position:relative">
                                <i class="fas fa-trash-alt fa-lg delete-icon" onclick="remove_img(2)"></i>
                                <label class="edit-icon" for="prodUpload2"><i class="fas fa-edit fa-lg"></i></label>
                                <img src="{{imageUrl inventory.imageFile 1}}" alt=""
                                    onerror="this.onerror=null;this.src='/img/no-image.jpg';"
                                    class="img-thumbnail img-fluid" id="img2">
                                {{#if (imageUrl inventory.imageFile 1)}}
                                <input id="prodURL2" type="hidden" name="prodURL2"
                                    value="{{imageUrl inventory.imageFile 1}}">
                                {{else}}
                                <input id="prodURL2" type="hidden" name="prodURL2"
                                    value="/img/no-image.jpg">
                                {{/if}}
                                <input type="file" name="prodUpload2" id="prodUpload2" class="file_button"
                                    accept="image/png,image/jpeg,image/jpg,image/gif" hidden>
                            </div>
                        </div>
                        <div class="row">
                            <div style="position:relative">
                                <i class="fas fa-trash-alt fa-lg delete-icon" onclick="remove_img(3)"></i>
                                <label class="edit-icon" for="prodUpload3"><i class="fas fa-edit fa-lg"></i></label>
                                <img src="{{imageUrl inventory.imageFile 2}}" alt=""
                                    onerror="this.onerror=null;this.src='/img/no-image.jpg';"
                                    class="img-thumbnail img-fluid" id="img3">
                                {{#if (imageUrl inventory.imageFile 2)}}
                                <input id="prodURL3" type="hidden" name="prodURL3"
                                    value="{{imageUrl inventory.imageFile 2}}">
                                {{else}}
                                <input id="prodURL3" type="hidden" name="prodURL3"
                                    value="/img/no-image.jpg">
                                {{/if}}
                                <input type="file" name="prodUpload3" id="prodUpload3" class="file_button"
                                    accept="image/png,image/jpeg,image/jpg,image/gif" hidden>
                            </div>

                            <div style="position:relative">
                                <i class="fas fa-trash-alt fa-lg delete-icon" onclick="remove_img(4)"></i>
                                <label class="edit-icon" for="prodUpload4"><i class="fas fa-edit fa-lg"></i></label>
                                <img src="{{imageUrl inventory.imageFile 3}}" alt=""
                                    onerror="this.onerror=null;this.src='/img/no-image.jpg';"
                                    class="img-thumbnail img-fluid" id="img4">
                            </div>
                            {{#if (imageUrl inventory.imageFile 3)}}
                            <input id="prodURL4" type="hidden" name="prodURL4"
                                value="{{imageUrl inventory.imageFile 3}}">
                            {{else}}
                            <input id="prodURL4" type="hidden" name="prodURL4"
                                    value="/img/no-image.jpg">
                            {{/if}}
                            <input type="file" name="prodUpload4" id="prodUpload4" class="file_button"
                                accept="image/png,image/jpeg,image/jpg,image/gif" hidden>
                        </div>
                        {{!-- <input type="file" name="" id="" accept="image/png,image/jpeg,image/jpg,image/gif"> --}}
                    </div>

                    <div class="col-md-7 col-lg-7 d-flex flex-column">
                        <div class="row">
                            <div class="col-md-12">
                                <div class="form-group">
                                    <label for="">Title</label>
                                    <input type="text" name="title" id="" class="form-control"
                                        value="{{inventory.title}}">
                                </div>
                                <div class="form-group">
                                    <label for="">Price($)</label>
                                    <input type="number" step="0.01" name="price" id="price" class="form-control" onkeyup="formValidation('price')"
                                        value="{{inventory.price}}">
                                </div>
                                <div class="form-group">
                                    <label for="">Quantity</label>
                                    <input type="number" name="quantity" id="quantity" min=1 step=1 class="form-control" onkeyup="formValidation('quantity')"
                                        value="{{inventory.quantity}}">
                                </div>
                                <div class="form-group">
                                    <label for="">Category</label>
                                    <select class="form-control" id="" name="category">
                                        {{#select inventory.category}}
                                        {{#each category}}
                                        <option value="{{category}}">{{category}}</option>
                                        {{/each}}
                                        {{/select}}
                                    </select>
                                </div>
                                {{!-- <div class="form-group">
                                    <label for="">Status</label>
                                    <select class="form-control" id="" name="status">
                                        {{#select inventory.status}}
                                        <option value="Active">Active</option>
                                        <option value="Inactive">Inactive</option>
                                        {{/select}}
                                    </select>
                                </div> --}}
                                <div class="form-group">
                                    <label for="">Description</label>
                                    <textarea class="form-control" name="description"
                                        rows="5">{{inventory.description}}</textarea>
                                    <input id="datepicker" width="200" name="dateAdded" type="hidden" readonly />
                                </div>
                            </div>
                        </div>

                        <div class="row d-flex flex-grow-1 text-right align-items-end">
                            <div class="col-md-12">
                                <a href="/inventory" class="btn btn-secondary">Back</a>
                                <button type="submit" name="" id="submit_btn" class="btn btn-success">Update</button>
                            </div>
                        </div>
                    </div>
                </div>


            </form>
        </div>
    </div>
</div>

<script>
    $('#datepicker').datepicker({
        format: 'dd/mm/yyyy',
        value: new Date().toLocaleDateString('en-SG'),
        uiLibrary: 'bootstrap4',
    });
</script>