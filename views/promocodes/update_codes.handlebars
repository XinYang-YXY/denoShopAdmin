<div class="wrapper">
    {{>_sidemenu}}
    <div id="content">
        <h3 style="text-align: center;">Update Code</h3>
        <div class="card card-body" style="margin-top:50px;">
            <form action="/codes/updatecodes/{{codes.id}}?_method=PUT" method="post" id="addCodes">
                <input type="hidden" name="_method" value="PUT">
                <div class="row">
                    <div class="col">
                        <div class="form-group">
                            <label for="code_input">Code (click to generate)</label>
                            <input type="text" name="code" id="code_input" class="form-control" onclick="codegen()"
                                value="{{codes.code}}" readonly>
                        </div>
                        <div class="form-group">
                            <label for="">Discount(%)</label>
                            <input type="number" min=0 max=100 step=0.01 name="discount" id="discount"
                                class="form-control" value="{{codes.discount}}" onkeyup="validation('discount')">
                        </div>
                        <div class="form-group">
                            <label for="">Status</label>
                            <select name="status" id="status" class="form-control">
                                {{#select codes.status}}
                                <option value="Active">Active</option>
                                <option value="Inactive">Inactive</option>
                                {{/select}}
                            </select>
                        </div>
                    </div>
                </div>
                <div class="row d-flex flex-grow-1 text-right align-items-end">
                    <div class="col">
                        <a href="/codes" class="btn btn-secondary">Back</a>
                        <input type="submit" name="submit_btn" id="submit_btn" class="btn btn-primary" value="Submit">
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>